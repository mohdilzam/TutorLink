<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_tutorlink_logo" />

        <!-- Judul -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk ke TutorLink"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_bold"/>

        <!-- Card-style Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_white_bg"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp">

            <!-- Header Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selamat Datang!"
                android:textColor="#3D4C97"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Halo, silahkan masuk terlebih dahulu"
                android:textColor="#808080"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_bold" />

            <!-- Email Field -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_input"
                android:hint="Masukkan alamat email"
                android:padding="12dp"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_semibold"/>

            <!-- Password Field -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_input"
                android:drawableEnd="@drawable/ic_eye"
                android:hint="Masukkan kata sandi"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_semibold"/>

            <!-- Forgot Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:text="Lupa Kata Sandi ?"
                android:textColor="#7E7E7E"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_semibold"/>

            <!-- Login Button -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#89E6FF"
                android:text="Masuk"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppins_bold"/>
            <!-- Register Prompt -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum mempunyai akun? "
                android:textColor="#808080"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_bold" />

            <TextView
                android:id="@+id/tvRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar akun"
                android:textColor="#4A90E2"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</ScrollView>