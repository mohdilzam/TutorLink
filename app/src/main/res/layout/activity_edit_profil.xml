<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Toolbar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profil"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/btnSave"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_check" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Foto Profil -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/ivProfilePhoto"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tutor"
                    android:background="@drawable/circle_background" />

                <ImageView
                    android:id="@+id/btnEditPhoto"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="4dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_edit"
                    android:background="@drawable/circle_blue" />
            </FrameLayout>

            <!-- Data Pribadi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data Pribadi"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Lengkap"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/etNama"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:hint="Masukkan Nama lengkap"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14dp"
                    android:background="@drawable/bg_edit_text"
                    android:paddingHorizontal="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tempat &amp;Tanggal Lahir"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/etTTL"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14dp"
                    android:hint="Masukkan Tempat &amp; Tanggal Lahir"
                    android:background="@drawable/bg_edit_text"
                    android:paddingHorizontal="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/etGender"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:hint="Jenis Kelamin"
                    android:background="@drawable/bg_edit_text"
                    android:paddingHorizontal="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat Lengkap"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/etAlamat"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:hint="Masukkan Alamat lengkap"
                    android:background="@drawable/bg_edit_text"
                    android:paddingHorizontal="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Asal Sekolah"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/etSekolah"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:hint="Masukkan Asal Sekolah"
                    android:background="@drawable/bg_edit_text"
                    android:paddingHorizontal="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Orang Tua"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/etNamaOrtu"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:hint="Masukkan Nama Orang Tua"
                    android:background="@drawable/bg_edit_text"
                    android:paddingHorizontal="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No. HP Orang Tua"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/etHpOrtu"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14dp"
                    android:hint="Masukkan No. HP Orang Tua"
                    android:inputType="phone"
                    android:background="@drawable/bg_edit_text"
                    android:paddingHorizontal="12dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Tombol Batal -->
    <Button
        android:id="@+id/btnBatal"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:text="Batal"
        android:fontFamily="@font/inter_bold"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#FF8483"
        android:layout_margin="16dp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
