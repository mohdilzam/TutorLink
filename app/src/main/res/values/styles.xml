<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Time toggle button style -->
    <style name="TimeToggleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:checkable">true</item>
        <item name="android:backgroundTint">@color/time_toggle_bg</item>
        <item name="android:textColor">@color/time_toggle_text</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>

