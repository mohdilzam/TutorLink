<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna background -->
    <solid android:color="#FFFFFF" />

    <!-- Radius sudut -->
    <corners android:radius="16dp" />

    <!-- Border opsional -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Shadow untuk Android 9 ke atas akan butuh elevation di layout -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
