<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:elevation="4dp"
    android:radius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgTutor"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_circle"
            android:src="@drawable/tutor"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNamaTutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kak Yusuf"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtLokasiTutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi: Banda Aceh"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/txtLihatProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Profil"
                android:textSize="12sp"
                android:textColor="@color/blue"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/txtJarak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 km"
                android:textSize="12sp"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/txtRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ 4.5"
                android:textSize="14sp"
                android:textColor="#F9A825"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
